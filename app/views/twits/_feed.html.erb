<div class="column is-half">
	<% if user_signed_in? %>	
		<article class="media box">
			<figure class="media-left">
				<p class="img-circular">
					<% if current_user.avatar.attached? %>
						<%= image_tag current_user.avatar, class: 'img-circular' %>
					<% else %>
						<%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name, class: 'img-circular') %>
					<% end %>		
				</p>
			</figure>
			<div class="media-content">
				<%= render 'twits/form' %>
			</div>
		</article>
	<% end %>
	<% @twits.each do | twit | %>
		<% if twit.user.present?  %>
			<div class="box">
				<article class="media">
					<div class="media-left">
						<figure class="img-circular">								
							<% if twit.user.avatar.attached? %>
								<%= image_tag twit.user.avatar, class: 'img-circular' %>
							<% else %>
								<%= gravatar_image_tag(twit.user.email, size: 64, alt: twit.user.name, class: 'img-circular') %>
							<% end %>
						</figure>
					</div>
					<div class="media-content">
						<div class="content">
							<strong><%= twit.user.name %></strong><br />
							<small><%= twit.user.username %></small><br/>
							<p><%= twit.twit %></p>
						</div>
						<% if user_signed_in? && current_user.id == twit.user_id %>
							<nav class="level is-mobile">
								<div class="level-left">
									<%= link_to twit, class: "level-item" do %>
										<span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
									<% end %>
									<%= link_to edit_twit_path(twit), class: "level-item" do %>
										<span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
									<% end %>
									<%= link_to twit, class: "level-item", method: :delete, data: { confirm: "Are you sure you want to delete this twit?" } do %>
											<span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
									<% end %>
								</div>
							</nav>
						<% end %>
					</div>
					<% if user_signed_in? && current_user.id != twit.user_id %>
						<div class="media-right">
							<div class="content">
								<nav class="level">
									<div class="level-right">
										<div class="level-item">
										<% if current_user.following?(twit.user) %>
											<%= link_to friendships_path(user_id: twit.user_id), method: :unfollow do %>
												<a class="button is-info is-small is-focused is-rounded">Unfollow</a>
											<% end %>
										<% else %>
											<%= link_to friendships_path(user_id: twit.user_id), method: :follow do %>
												<a class="button is-info is-small is-focused is-rounded">Follow</a>
											<% end %>
										<% end %>
										</div>
									</div>
								</nav>
							</div>
						</div>
					<% end %>
				</article>
			</div>
		<% end %>
	<% end %>
</div>


